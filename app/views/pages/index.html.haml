- content_for :footer do
  #footer_home.inverse_links
    .grid_5.home_links
      .footcap
        .link= link_to image_tag('/images/tv_icon.png') + "Knotebooks in 60 seconds", "#knotebooks_101", :rel => 'facebox', :class => 'top'
        .link= link_to image_tag('/images/star.png') + "Try a sample knotebook", '/knotebooks/125'
        .link
          - if logged_in?
            = link_to image_tag('/images/kb_new.png') + "Create a new knotebook", new_knotebook_path
          - else
            = RPXNow.popup_code(image_tag('/images/login_icons.gif') + 'Sign Up for your free account!', 'knotebooks', rpx_login_url, :language => 'en')
    .grid_7.home_text
      %p Knotebooks is more than just a community to share math and physics knowledge. It's intuitive technology and a disruptive idea that makes learning science simpler. 
      %p.tag_line Anyone can contribute. Everyone can learn.
    .grid_4
      .footer_video= link_to "Take the Tour!", "#intro_video", :rel => 'facebox'
    .clear



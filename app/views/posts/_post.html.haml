- div_for post do
  %h3= post.title
  .dateline= post.updated_at.to_s(:long)
  .post_content= post.content
  - if current_user && current_user.is_admin?
    %hr
    .post_delete= link_to "Delete this post", post, { :method => :delete, :confirm => "Are you sure you want to delete this post?", :rel => "nofollow" }